{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noEmitOnError": true,
    "removeComments": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*", "./gulpfile.ts"],
  "exclude": [
    "node_modules"
  ]
}
